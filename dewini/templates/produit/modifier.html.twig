{% extends 'base1.html.twig' %}

{% block body %}
    <div class="container">
        <h1>Modifier un produit</h1>
        
        {# Affichage des éventuelles erreurs du formulaire #}
        {% if form_errors(f) %}
            <div class="alert alert-danger">
                {{ form_errors(f) }}
            </div>
        {% endif %}
        
        {# Début du formulaire #}
        {{ form_start(f,{'attr':{'novalidate':'novalidate'}}) }}
        
        {# Champ "Nom" du produit #}
        <div class="form-group">
    {{ form_label(f.nom) }}
    {{ form_widget(f.nom, {'attr': {'class': 'form-control'}}) }}
        <div class="form-error-message">

    {{ form_errors(f.nom) }} {# Affiche les erreurs de validation pour le champ "nom" #}
</div>
</div>

<div class="form-group">
    {{ form_label(f.prix) }}
    {{ form_widget(f.prix, {'attr': {'class': 'form-control'}}) }}
            <div class="form-error-message">

    {{ form_errors(f.prix) }} {# Affiche les erreurs de validation pour le champ "prix" #}
</div>
</div>

<div class="form-group">
    {{ form_label(f.photo,'choose your photo') }}
    
    {{ form_widget(f.photo, {'attr': {'class': 'form-control'}}) }}
    <div class="form-error-message">
        {{ form_errors(f.photo) }}
    </div>
</div>


        
        {# Bouton de soumission du formulaire #}
      
        <button type="submit" class="btn btn-primary">Ajouter</button>
  

        {# Fin du formulaire #}
        {{ form_end(f) }}
    </div>
{% endblock %}